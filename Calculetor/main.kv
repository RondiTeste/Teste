<TelaCalculator>:
    orientation:'vertical'
    MDTopAppBar:
    	title:'portocol'
    	#left_action_items:[['menu']]
    	right_action_items:[['theme-light-dark',lambda x:app.charge_color()]]
    FloatLayout:
        MDIconButton:
        	icon:'timer'
        	icon_size:200
        	pos_hint:{'center_x':.5,'center_y':.8}
	    MDLabel:
	    	text:root.time_string
	    	halign:'center'
	    	font_style:'H1'
	    MDRaisedButton:
	    	text:root.button_string
	    	on_release:root.click()
	    	size_hint_x:0.5
	    	pos_hint:{'center_x':0.5,'center_y':0.2}